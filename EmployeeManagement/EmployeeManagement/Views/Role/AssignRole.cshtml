@model EmpManagement.Models.RoleModel

@{
    ViewData["Title"] = "Assign Role";
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-6"><h4>Assign Role</h4></div>
                <div class="col-sm-6 pt-1 text-right"><a class="text-right text-dark" asp-action="Index">X</a></div>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="RoleId" class="control-label"></label>
                            <select class="form-control" asp-for="@Model.RoleId"
                                    asp-items="@ViewBag.RoleList"></select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="EmployeeId" class="control-label"></label>
                            <select class="form-control" asp-for="@Model.EmployeeId"
                                    asp-items="@ViewBag.EmployeeSelect"></select>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>