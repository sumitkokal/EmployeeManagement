@model EmpManagement.Models.RoleModel

@{
    ViewData["Title"] = "Assign Role";
}
<div class="container-fluid">
    <form asp-action="AssignRole">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6"><h4>Assign Role</h4></div>
                    <div class="col-sm-6 pt-1 text-right"><a class="text-right text-dark" asp-action="Index">X</a></div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="RoleId" class="control-label"></label>
                            <select class="form-control" asp-for="@Model.RoleId"
                                    asp-items="@ViewBag.RoleList"></select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="UserId" class="control-label"></label>
                            <select class="form-control" asp-for="@Model.UserId"
                                    asp-items="@ViewBag.EmployeeList"></select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <input type="submit" value="Assign Role" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>