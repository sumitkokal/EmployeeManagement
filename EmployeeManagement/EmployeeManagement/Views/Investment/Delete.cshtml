@model EmployeeManagement.Models.InvestmentModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-6"><h4>Confirm Delete</h4></div>
                <div class="col-sm-6">
                    <p class="pb-0 mb-0 text-right">
                        <a asp-action="Index">X</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EmployeeId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EmployeeId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.InvestmentType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.InvestmentType)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.InvestmentName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.InvestmentName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EndDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="InvestmentId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
 
 